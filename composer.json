{
    "name": "govcmstesing/govcms-project",
    "description": "Project template for GovCMS projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "cweagans/composer-patches": "^1.7",
        "govcms/govcms": "dev-release/2.x/2.0.0-beta1"
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "installer-types": ["bower-asset", "npm-asset"],
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library", "type:bower-asset", "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        }
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "nuke": "rm -r -f composer.lock bin app web vendor node_modules"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}